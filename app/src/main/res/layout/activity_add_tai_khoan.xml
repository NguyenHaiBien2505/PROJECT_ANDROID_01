<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".AddTaiKhoanActivity">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm tài khoản mới"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="#18191A" />

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textSize="13sp"
                android:textColor="#444444"/>

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Nhập username"
                android:background="@drawable/bg_input"
                android:padding="6dp"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Nhập mật khẩu"
                android:background="@drawable/bg_input"
                android:padding="6dp"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Họ tên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Họ tên"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <EditText
                android:id="@+id/edtHoTen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Nhập họ tên"
                android:padding="6dp"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Nhập email"
                android:padding="6dp"
                android:inputType="textEmailAddress"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Số điện thoại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Số ĐT"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <EditText
                android:id="@+id/edtSoDT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:padding="6dp"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Địa chỉ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <EditText
                android:id="@+id/edtDiaChi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Nhập địa chỉ"
                android:padding="6dp"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Ngày sinh -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="6dp">

                <EditText
                    android:id="@+id/edtNgaySinh"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="dd/mm/yyyy"
                    android:inputType="none"
                    android:focusable="false"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/btnSelectedDate"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/calendar"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Giới tính (RadioGroup) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <RadioGroup
                android:id="@+id/rgGioiTinh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="13sp"/>

                <RadioButton
                    android:id="@+id/rbNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:layout_marginStart="20dp"
                    android:textSize="13sp"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Ngày tạo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Ngày tạo"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="6dp">

                <EditText
                    android:id="@+id/edtNgayTao"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="dd/mm/yyyy"
                    android:inputType="none"
                    android:focusable="false"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/btnDate"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/calendar"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Vai trò -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Mã vai trò"
                android:textSize="14sp"
                android:textColor="#444444"/>

            <EditText
                android:id="@+id/edtVaiTro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Nhập vai trò"
                android:inputType="number"
                android:padding="6dp"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_luu"
                android:text="Lưu"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btn_huy"
                android:text="Hủy"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/red"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
